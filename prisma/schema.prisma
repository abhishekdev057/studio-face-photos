generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}



// Production Configuration (Neon DB)
datasource db {
  provider   = "postgresql"
  url        = env("POSTGRES_PRISMA_URL")
  extensions = [vector]
}



model Event {
  id        String      @id @default(cuid())
  name      String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
  photos    Photo[]
  people    Person[]
  links     ShareLink[]
}


model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(VIEWER)
  accounts      Account[]
  sessions      Session[]
  
  // Custom Relation
  events        Event[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  
  access_token       String?  
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  ADMIN
  ORGANIZER
  VIEWER
}



model Photo {
  id        String   @id @default(cuid())
  url       String
  width     Int
  height    Int
  hash      String?  @default("") // SHA-256 hash for deduplication
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  faces     Face[]
  createdAt DateTime @default(now())
}

model Face {
  id        String                 @id @default(cuid())
  photoId   String
  photo     Photo                  @relation(fields: [photoId], references: [id], onDelete: Cascade)
  embedding Unsupported("vector(128)")? 
  personId  String?
  person    Person?                @relation(fields: [personId], references: [id])
}


model Person {
  id           String   @id @default(cuid())
  name         String?
  eventId      String
  event        Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  faces        Face[]
  coverPhotoId String?  // ID of a representative photo/face
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ShareLink {
  id        String   @id @default(cuid())
  slug      String   @unique @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  type      LinkType
  config    Json?    // Stores allowed personIds or photoIds
  views     Int      @default(0)
  createdAt DateTime @default(now())
}

enum LinkType {
  ALL
  SPECIFIC
  SELECTION
}
